<%= render "shared/partial" %>
<h3>スケジュール一覧</h3>
 
<% if flash.notice %>
  <p class="notice"><%= flash.notice %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>タイトル</th>
      <th>始める日</th>
      <th>終わる日</th>
      <th>更新日</th>

      <th>詳細確認</th>
      <th>編集</th>
      <th>消去</th>
    </tr>
  </thead>
 
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.id %></td>
        <td><%= task.title %></td>
        <td><%= task.start %></td>
        <td><%= task.finish %></td>
        <td><%= task.updated_at.to_s(:datetime_jp) %></td>
        
        
        
        
      </tr>
    <% end %>
  </tbody>
</table>
 
<p><%= link_to "スケジュール登録", :new_task %></p>
